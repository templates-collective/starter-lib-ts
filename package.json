{
  "name": "starter-lib-ts",
  "type": "module",
  "version": "0.1.0",
  "packageManager": "pnpm@9.10.0",
  "description": "TypeScript Library starter template, supports ESM and CJS.",
  "author": "Kieran Wong <kieranwong9865@gmail.com> (https://github.com/kieranwong9865/)",
  "license": "MIT",
  "homepage": "https://github.com/templates-collective/starter-lib-ts#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/templates-collective/starter-lib-ts.git"
  },
  "bugs": {
    "url": "https://github.com/templates-collective/starter-lib-ts/issues"
  },
  "keywords": [
    "typescript",
    "library",
    "starter"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./*": "./*"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "pnpm": ">=9.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "simple-git-hooks",
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "release": "bumpp && pnpm build && pnpm publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.27.3",
    "bumpp": "^9.5.2",
    "eslint": "^8.57.0",
    "jsdom": "^24.1.3",
    "lint-staged": "^15.2.9",
    "rimraf": "^5.0.10",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "pnpm lint:fix"
  }
}
